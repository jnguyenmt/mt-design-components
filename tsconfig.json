{
  "compilerOptions": {
    "baseUrl": "src",
    "moduleResolution": "node",
    "target": "es6",
    "module":"es2015",
    "jsx": "react",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "dist/types",
    "outDir": "./dist/lib",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
